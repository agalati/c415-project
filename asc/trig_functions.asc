# this will use a taylor series to calculate arctan
# need to do some fooling around to accomodate whole
# domain of reals
arctan
        PUSH -3[0]      # x value
        CONSTR 0        # n value
        CONSTR 1200       # max n value
        CONSTR 0        # y value (return val)
        CONSTR 0        # NEG flag

#if x > 1, lgarctanloop
        PUSH 0[0]       # if x < 0
        CONSTR 0
        LTR             # == 1 if neg, 0 if pos
        POP 4[0]        # set NEG flag

        PUSH 0[0]       # place x on stack
        PUSH 4[0]       # get NEG flag
        IFZ skiptosizecheck
        CONSTR -1
        MULR
skiptosizecheck
        CONSTR 1
        GTR
        IFZ arctanloop
        GOTO lgarctanloop

arctanloop
        CONSTR -1       # (-1)^n
        PUSH 1[0]
        CONSTR 1
        ADDR       
        CALL 0,powercalc
        ADJUST -1

        PUSH 0[0]       # x
        CONSTR 1
        CONSTR 2
        PUSH 1[0]
        MULR
        ADDR            # 1+2n
        CALL 0,powercalc
        ADJUST -1       # little quirk...must move SP up 1 on ret

        MULR
        CONSTR 1
        CONSTR 2
        PUSH 1[0]
        MULR
        ADDR

        DIVR
        PUSH 3[0]
        ADDR
        POP 3[0]

        PUSH 2[0]      # max n
        PUSH 1[0]      # n
        SUBR           # if n==n...
        IFZ endarctanloop
        PUSH 1[0]
        CONSTR 1
        ADDR
        POP 1[0]       # n++ 

        GOTO arctanloop
 
endarctanloop
        PUSH 3[0]       # Adjust the value since formula flips sign...
        CONSTR -1
        MULR
        POP 0[0]        # place answer in x position
        ADJUST -4
        POP -3[0]       # ret value

        RET 0


lgarctanloop
